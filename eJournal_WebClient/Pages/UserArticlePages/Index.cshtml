@page
@model eJournal_WebClient.Pages.UserArticlePages.IndexModel
@{
}
<header>
<a asp-page="/UserArticlePages/Create" class="button primary">Create</a>
	<section>
		<h2>Form</h2>
		<form method="get">
			<div class="row gtr-uniform">
				<div class="col-6">
					<label for="id">Article ID</label>
					<input type="text" name="id" id="demo-name" value="" placeholder="Article ID">
				</div>
				<div class="col-6">
					<label for="title">Article title</label>
					<input type="text" name="title" id="demo-name" value="" placeholder="Article title">
				</div>
				<div class="col-6">
					<label for="topic">Topic</label>
					<select name="topic" id="topic" asp-items="ViewBag.Topics">
						<option value="0">-- Topics --</option>
					</select>
				</div>
				<div class="col-12">
					<ul class="actions">
						<li><input type="submit" value="Search" class="primary"></li>
						<li><input type="reset" value="Reset"></li>
					</ul>
				</div>
			</div>
		</form>
	</section>

		</header>
		<section class="tiles">
			@foreach (var item in Model.Articles) {
				<article class="style2">
					<span class="image">
						<img src="images/pic01.jpg" alt="" />
					</span>
					<a asp-page="./Details" asp-route-id="@item.Id">
						<h2>@item.Title</h2>
						<p>@item.Status</p>
						@*<div class="content">
							<p>Sed nisl arcu euismod sit amet nisi lorem etiam dolor veroeros et feugiat.</p>
						</div>*@
					</a>
				</article>
			}
		</section>
